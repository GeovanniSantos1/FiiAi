modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_openai:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Server"

[[workflows.workflow]]
name = "Next.js Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "prisma generate && next dev --hostname 0.0.0.0 --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41199
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
build = ["bash", "-c", "npm install --legacy-peer-deps && npx prisma generate && npm run build"]
run = ["npm", "start"]
